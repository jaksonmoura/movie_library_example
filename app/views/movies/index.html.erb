<div class="col-md-6 col-md-offset-3">
  <%= form_tag(movies_path, method: :get) do %>
    <%= label_tag :query %><br />
    <%= text_field_tag :query, '', class: 'form-control' %>
    <%= submit_tag "Search", class: 'btn btn-default' %>
  <% end %>
</div>

<h1>Movies</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Release At</th>
      <th>Summary</th>
      <th>Rate</th>
      <th>Duration</th>
    </tr>
    <% for movie in @movies %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_at %></td>
        <td><%= movie.summary %></td>
        <td><%= movie.rate %></td>
        <td><%= movie.duration %></td>
      <td>
        <%= link_to "Show", movie, class: "btn btn-xs btn-default" %>
        <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-xs btn-success" %>
        <%= link_to "Destroy", movie, data: { confirm:'Are you sure?' }, method: :delete, class: "btn btn-xs btn-danger" %>
      </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="actions">
  <%= link_to "New Movie", new_movie_path, class: "btn btn-primary" %>
</div>
