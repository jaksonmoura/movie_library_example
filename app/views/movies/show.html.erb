<h2>Movie</h2>

<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Title:</strong>
      <%= @movie.title %>
    </p>
    <p>
      <strong>Release At:</strong>
      <%= @movie.release_at %>
    </p>
    <p>
      <strong>Summary:</strong>
      <%= @movie.summary %>
    </p>
    <p>
      <strong>Rate:</strong>
      <%= @movie.rate %>
    </p>
    <p>
      <strong>Duration:</strong>
      <%= @movie.duration %>
    </p>
  </div>
</div>

<p>
  <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-success" %>
  <%= link_to "Remove", @movie, data: { confirm:'Are you sure?' }, method: :delete, class: "btn btn-danger" %>
  <%= link_to "View All", movies_path, class: "btn btn-primary" %>
</p>
